@model IEnumerable<Vino_API_Assessment.Models.InventoryModel>
@{
    ViewBag.Title = "API Results - Christopher Albarillo";
}
<h1>@ViewBag.Title</h1>
<div class="card mb-3">
    <div class="card-header">
        <i class="fas fa-table"></i>
        <h3>Canada Post</h3>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Service Type</th>
                        <th>Transit Day</th>
                        <th>Regular Price</th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Service Type</th>
                        <th>Transit Day</th>
                        <th>Regular Price</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (var item in Model)
                    {

                        <tr>
                            <td>@item.ServiceName</td>
                            <td>@item.ExpectedDay</td>
                            <td>@item.Price</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

    </div>
</div>